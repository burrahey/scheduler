<% if employee_signed_in? %>
  <div>
    <%= link_to "Home", root_path %> | <%= link_to "View All Employees", supervisor_employees_path %> | <%= link_to "Search Shifts", shifts_path %> |
    <% if current_employee.supervisor? %>
      <%= link_to "Add a New Employee", new_supervisor_employee_path %> | <%= link_to "Manage Associates", supervisor_employees_associates_path, method: 'post' %> |
    <% end %>
    <%= link_to "Sign Out", destroy_employee_session_path, method: 'delete' %>
  </div>
  </div>
<% else %>
  <div>
    <%= link_to "Sign Up", new_employee_registration_path %> | <%= link_to "Log In", new_employee_session_path %> |   <%= link_to "Sign in with Facebook", employee_facebook_omniauth_authorize_path %>

<% end %>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
